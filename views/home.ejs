<html>
    <head>
        <script src="https://kit.fontawesome.com/de96cf0a7f.js" crossorigin="anonymous"></script>
        <title>
            <%= title %>
        </title>
        <style>
            body{
                background-color: black;
            }
            ul{
                color: mintcream;
            }
            form{
                color: mintcream;
            }
        </style>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <div>
            
            <h1 id="page-heading"><i class="far fa-address-book"></i> My Contact List</h1>
        </div>
        <div id="contacts-list-container">
            <ul >
                <% for(let i of contact_list){%>
                     <li class="contact">
                        <div class="details">
                            <p><%= i.name %></p>
                            <p><%= i.phone %></p>
                        </div>
                        <div class="delete-button">
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <i class="fas fa-window-close"></i>
                            </a>
                        </div>
                    </li>
                    
                    <% } %>
            </ul>
        </div>
        <form action="/create-contact" method="POST">
            <input type="text/" name="name" placeholder="enter name" required>
            <input type="number" name="phone" placeholder="enter number" required>
            <button type="submit">Add Contact</button>
        </form>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>